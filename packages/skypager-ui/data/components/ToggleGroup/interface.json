{
  "description": "The ToggleGroup is a button group with mutiple buttons which can be toggled on or off in any combination.",
  "displayName": "ToggleGroup",
  "props": {
    "items": {
      "type": {
        "name": "arrayOf",
        "value": {
          "name": "shape",
          "value": {
            "label": {
              "name": "string",
              "required": true
            },
            "icon": {
              "name": "string",
              "required": false
            },
            "color": {
              "name": "string",
              "required": false
            },
            "style": {
              "name": "string",
              "required": false
            },
            "size": {
              "name": "string",
              "required": false
            }
          }
        }
      },
      "required": false,
      "description": "an array of labels for the buttons"
    },
    "onChange": {
      "type": {
        "name": "func"
      },
      "required": false,
      "description": "an additional onChange handler"
    }
  }
}